[*]
end_of_line = lf
insert_final_newline = true

[*.py]
indent_style = space
indent_size = 4
max_line_length = 120
charset = utf-8

[*.js]
indent_style = space
indent_size = 2
max_line_length = 120
charset = utf-8

[*.html]

[*.md]
trim_trailing_whitespace = false

[{*.{yml,yaml}]
indent_style = space
indent_size = 2

[*.sh]
indent_style = space
indent_size = 2
shell_variant      = posix
binary_next_line   = true
switch_case_indent = true
space_redirects    = true
keep_padding       = true
function_next_line = true
never_split        = true