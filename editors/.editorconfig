[*]
indent_style             = space
indent_size              = 2
end_of_line              = lf
insert_final_newline     = true
trim_trailing_whitespace = true
max_line_length          = 80

[*.sh]
shell_variant      = posix
binary_next_line   = true
switch_case_indent = true
space_redirects    = true
keep_padding       = true
function_next_line = true
never_split        = true

[*.py]
indent_size = 4
charset     = utf-8

[*.js]
charset = utf-8

[*.{yml,yaml}]

[*.json]
charset = utf-8

[*.md]
trim_trailing_whitespace = false